<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ComboBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.blu4ck.fundickonot.MainController">
    <!-- Üst Bölge: Konu Klasörleri -->
    <top>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
                <HBox fx:id="topicsHBox" spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </HBox>
            </content>
        </ScrollPane>
    </top>
    <ComboBox fx:id="categoryComboBox" />

    <!-- Sol Bölge: Yeni Klasör Oluşturma ve Klasör Silme -->
    <left>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Button text="Yeni Klasör Oluştur" onAction="#handleNewFolder"/>
                <Button text="Klasör Sil" onAction="#handleDeleteFolder"/>
            </children>
        </VBox>
    </left>

    <!-- Sağ Bölge: Resimli Not Açıklamaları -->
    <right>
        <VBox alignment="TOP_LEFT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label text="Not Açıklamaları:"/>
                <ListView fx:id="explanationListView" prefWidth="200"/>
            </children>
        </VBox>
    </right>

    <!-- Alt Bölge: Not İşlemleri ve Kategori Yönetimi -->
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <HBox alignment="CENTER" spacing="10">
                <children>
                    <Button text="Resimli Notlar" onAction="#handleImageNotes"/>
                    <Button text="Metinsel Notlar" onAction="#handleTextNotes"/>
                    <Button text="Yeni Not Ekle" onAction="#handleAddNote"/>
                    <Button text="Resimli Not Ekle" onAction="#handleAddImageNote"/>
                    <Button text="Not Düzenle" onAction="#handleEditNote"/>
                    <Button text="Not Sil" onAction="#handleDeleteNote"/>
                </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <children>
                    <Button text="Kategori Oluştur" onAction="#handleCreateCategory"/>
                </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <children>
                    <ListView fx:id="categoryListView" prefHeight="50" prefWidth="600"/>
                </children>
            </HBox>
        </VBox>
    </bottom>

    <!-- Orta Bölge: Notların Görüntüleneceği Ana Alan -->
    <center>
        <StackPane fx:id="mainContentArea">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <ListView fx:id="notesListView"/>
            </children>
        </StackPane>
    </center>
</BorderPane>
